        <ul class="navbar">
          <li><a href="#">Home</a></li>
          <li><a href="#">Posts</a></li>
          <li><a href="#">Usuários</a></li>
          <li><a href="#">Notícias do Dia</a></li>
        </ul>

        <div class="buttons">
          <%= if !@current_user do %>
            <a href="/sessions/new" class="button">
              Entrar
            </a>
            <%= link "Registrar", class: "button button-outline", to: Routes.user_path(@conn, :new) %>
          <% else %>
            <a href="/manage/profile" class="button"><%= @current_user.username %></a>

            <%= link "Sair", class: "button button-outline", to: Routes.session_path(@conn, :delete, @current_user), method: "delete" %>
          <% end %>
        </div>

      <!--

            <a href="/"><i class="fa fa-home"> Home</i></a> |
            <a href="/posts"><i class="fa fa-comments"> Discussão do dia</i></a> |

            <%= if !@current_user do %>
